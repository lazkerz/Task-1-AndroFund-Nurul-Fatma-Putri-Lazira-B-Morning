<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tambah.TambahFragment"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txttambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="Tambah Pengunjung"
        android:textSize="20dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/txtnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttambah"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Nama"
        android:textSize="15dp" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtnama"
        android:paddingStart="10dp"
        android:layout_marginStart="20dp"
        android:hint="Masukkan Nama"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:id="@+id/nama"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/nama"
        android:text="Alamat"
        android:textSize="15dp"
        android:id="@+id/txtalamat"/>

    <EditText
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtalamat"
        android:paddingStart="10dp"
        android:layout_marginStart="20dp"
        android:hint="Masukkan Alamat"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:id="@+id/alamat"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alamat"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="Tanggal Masuk"
        android:textSize="15dp"
        android:id="@+id/txttanggal"/>

    <EditText
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txttanggal"
        android:paddingStart="10dp"
        android:layout_marginStart="20dp"
        android:hint="Pilih Tanggal"
        android:inputType="none"
        android:focusable="false"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:id="@+id/tgl"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tgl"
        android:scaleType="center"
        android:text="Tambah"
        android:id="@+id/btnminta"/>
</RelativeLayout>